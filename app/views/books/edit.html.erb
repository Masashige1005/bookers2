<div class = "container">
	<% if @book.errors.any? %>
	<div id="error_explanation">
	      <h2><%= pluralize(@book.errors.count, "error") %> prohibited 	this user from being saved:</h2>
		<div class = "alert alert-warning">
			<ul>
				<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= form_for(@book) do |f| %>
	<h1 class = "edit_title">Editing Book</h1>
	<p class = "edit_text">Title</p>
	<div class = "edit_area">
		<%= f.text_field :title %>
	</div>
	<p class = "edit_text">Opinion</p>
	<div class = "edit_area">
		<%= f.text_area :body %>
	</div>
	<div class = "edit_area">
		<%= f.submit 'Update Book' %>
	</div>
	<% end %>
	<div class = "edit_item">
		<%= link_to 'Show', book_path(@book.id) %>
		<%= link_to 'Back', '/books' %>
	</div>
</div>