<div class = "container">
	<%= render 'books/list', book: @book, user: current_user %>

	<div class = "col-xs-9" style= "background-color:white;">
		<h1>Books</h1>
		<table class = "table table-striped">
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to user_path(book.user_id) do %>
					<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
					<% end %>
				</td>
				<td>
					<%= link_to book.title, book_path(book.id) %>
				</td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>


