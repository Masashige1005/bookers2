<% if flash[:update] %>
	<div class = "alert alert-success">
		<%= flash[:update] %>
	</div>
<% end %>

<% if book.errors.any? %>
<div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this user from being saved:</h2>
	<div class = "alert alert-warning">
		<ul>
			<% book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class = "col-xs-3" style="background-color: white;">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

	<h3>name</h3>
	<p><%= user.name %></p>

	<h3>introduction</h3>
	<p><%= user.introduction %></p>

	<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

	<h2>New book</h2>

	<%= form_for(book) do |f| %>

		<div class = "index_area">
			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Body</h4>
			<%= f.text_area :body %>
		</div>
		<input type ="submit" name = "commit" value = "Create Book" class = "btn btn-primary col-xs-12">
	<% end %>
</div>
